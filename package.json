{
  "name": "Tarea3",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Pablo Reszczynski <pablore@live.cl>",
  "license": "MIT",
  "scripts": {
    "watch": "watchify -v -t [ babelify --presets [es2015 react] ] src/js/App.jsx -o dist/app.js -d",
    "test": "NODE_ENV=test mocha test/**/*.test.js -ui bdd --compilers js:babel-core/register",
    "build": "bower install && npm run build_react && npm run build_css && npm run build_fonts && npm run build_img",
    "build_fonts": "cp -r src/fonts dist",
    "build_img": "cp -r src/img dist",
    "build_react": "browserify -t [ babelify --presets [ es2015 react ] ] src/js/App.jsx -o dist/app.js -d",
    "build_css": "npm-sass ./src/style/main.scss > ./src/style/main.css && cp -r src/style dist"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "axios": "^0.16.1",
    "chai": "^3.5.0",
    "mocha": "^3.3.0",
    "moment": "^2.18.1",
    "npm-sass": "^2.2.0",
    "ramda": "^0.23.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router": "^4.1.1",
    "run-browser": "^2.0.2",
    "sass": "^0.5.0",
    "watchify": "^3.9.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "bower": "^1.8.0",
    "browserify": "^14.3.0"
  }
}
